@model App.Domain.Match

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MatchTypeId" class="control-label"></label>
                <select asp-for="MatchTypeId" class ="form-control" asp-items="ViewBag.MatchTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MatchToken" class="control-label"></label>
                <input asp-for="MatchToken" class="form-control" />
                <span asp-validation-for="MatchToken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinishTime" class="control-label"></label>
                <input asp-for="FinishTime" class="form-control" />
                <span asp-validation-for="FinishTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPlayers" class="control-label"></label>
                <input asp-for="MaxPlayers" class="form-control" />
                <span asp-validation-for="MaxPlayers" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OpenedToJoin" /> @Html.DisplayNameFor(model => model.OpenedToJoin)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CratedBy" class="control-label"></label>
                <input asp-for="CratedBy" class="form-control" />
                <span asp-validation-for="CratedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CratedAt" class="control-label"></label>
                <input asp-for="CratedAt" class="form-control" />
                <span asp-validation-for="CratedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedBy" class="control-label"></label>
                <input asp-for="UpdatedBy" class="form-control" />
                <span asp-validation-for="UpdatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedAt" class="control-label"></label>
                <input asp-for="UpdatedAt" class="form-control" />
                <span asp-validation-for="UpdatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
